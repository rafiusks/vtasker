{
	"name": "vtasker",
	"version": "1.0.0",
	"description": "vTasker is a powerful, modern task management system inspired by Jira. It provides a streamlined interface for managing projects, tracking issues, and collaborating with team members. Built with performance and user experience in mind, vTasker offers both a rich web interface and a public API for integration with other tools.",
	"main": "index.js",
	"directories": {
		"doc": "docs"
	},
	"scripts": {
		"prepare": "husky install",
		"lint": "eslint . --ext .ts,.tsx",
		"lint:fix": "eslint . --ext .ts,.tsx --fix",
		"format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"lint-staged": {
		"*.{ts,tsx}": ["eslint --fix", "prettier --write"],
		"*.{js,jsx,json,md}": ["prettier --write"]
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^latest",
		"@typescript-eslint/parser": "^latest",
		"eslint": "^latest",
		"eslint-config-next": "^latest",
		"eslint-config-prettier": "^latest",
		"eslint-plugin-react": "^latest",
		"eslint-plugin-react-hooks": "^latest",
		"husky": "^latest",
		"lint-staged": "^latest",
		"prettier": "^latest"
	}
}
