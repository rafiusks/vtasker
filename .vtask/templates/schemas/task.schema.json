{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Task Template Schema",
  "type": "object",
  "required": ["title", "description", "acceptance_criteria", "related_information", "ai_metadata"],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 5,
      "maxLength": 100
    },
    "description": {
      "type": "string",
      "minLength": 10
    },
    "implementation_details": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "acceptance_criteria": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "pattern": "^\\[ \\] .*"
      }
    },
    "related_information": {
      "type": "object",
      "required": ["priority", "type", "status", "created", "updated"],
      "properties": {
        "priority": {
          "type": "string",
          "enum": ["low", "medium", "high"]
        },
        "type": {
          "type": "string",
          "enum": ["feature", "bug", "chore", "docs"]
        },
        "status": {
          "type": "string",
          "enum": ["backlog", "in-progress", "review", "done"]
        },
        "parent": {
          "type": "string",
          "pattern": "^task-\\d{3}(-\\d{1,2})?$"
        },
        "due_date": {
          "type": "string",
          "format": "date"
        },
        "created": {
          "type": "string",
          "format": "date"
        },
        "updated": {
          "type": "string",
          "format": "date"
        }
      }
    },
    "ai_metadata": {
      "type": "object",
      "required": ["complexity", "required_skills", "context_needed", "estimated_time", "task_nature"],
      "properties": {
        "complexity": {
          "type": "string",
          "enum": ["low", "medium", "high"]
        },
        "required_skills": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "context_needed": {
          "type": "string",
          "enum": ["codebase", "domain", "both", "minimal"]
        },
        "estimated_time": {
          "type": "number",
          "minimum": 0
        },
        "task_nature": {
          "type": "string",
          "enum": ["algorithmic", "creative", "maintenance", "research"]
        },
        "dependencies_graph": {
          "type": "string",
          "pattern": "^(task-\\d{3}(-\\d{1,2})? -> )*task-\\d{3}(-\\d{1,2})?$"
        },
        "related_components": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "ai_instructions": {
      "type": "object",
      "properties": {
        "preferred_approach": {
          "type": "string"
        },
        "constraints": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "special_considerations": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "success_metrics": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "notes": {
      "type": "string"
    },
    "comments": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^<!-- \\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2} - [^:]+: .+ -->$"
      }
    },
    "ai_progress": {
      "type": "object",
      "properties": {
        "last_action": {
          "type": "string",
          "format": "date-time"
        },
        "action_type": {
          "type": "string",
          "enum": ["analysis", "implementation", "review", "update"]
        },
        "action_summary": {
          "type": "string"
        },
        "next_steps": {
          "type": "string"
        },
        "blockers": {
          "type": "string"
        },
        "insights": {
          "type": "string"
        }
      }
    }
  }
} 