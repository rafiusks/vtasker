{
  "tasks": {
    "start:api": "deno run --allow-net --allow-read --allow-write --allow-env src/main.ts",
    "start:web": "pnpm preview",
    "start": "deno run --allow-run --allow-env --allow-net --allow-read --allow-write npm:concurrently \"deno task start:api\" \"deno task start:web\"",
    "dev:api": "deno run --allow-net --allow-read --allow-write --allow-env --watch src/main.ts",
    "dev:web": "pnpm dev",
    "dev": "deno run --allow-run --allow-env --allow-net --allow-read --allow-write npm:concurrently \"deno task dev:api\" \"deno task dev:web\"",
    "test": "deno test --allow-net --allow-read --allow-write",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "imports": {
    "oak": "https://deno.land/x/oak@v12.6.1/mod.ts",
    "zod": "https://deno.land/x/zod@v3.22.4/mod.ts",
    "djwt": "https://deno.land/x/djwt@v3.0.1/mod.ts",
    "std/": "https://deno.land/std@0.220.1/",
    "concurrently": "npm:concurrently@8.2.2"
  },
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.window"]
  },
  "lint": {
    "files": {
      "include": ["src/"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "files": {
      "include": ["src/"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  }
}